<h1>Ticket#index</h1>
<table>
<tr><td>Subjekt</td><td>Request</td></tr>
<% if !@tickets.empty? %> 
	<% @tickets.each do |ticket| %>
		<tr><td><%= ticket.subject %></td><td><%= ticket.request.slice(0..10) %></td>
		<td><%= link_to 'Edit', edit_ticket_path(ticket.id) %></td>
		<td><%= link_to 'Show', ticket %></td>
		<td><%= link_to 'Delete', delete_ticket_path(ticket.id) %></td></tr>
	<% end %>

<% else %>
	<b>Es sind noch keine Tickets vorhanden</b>
<% end %>
</table>
<p><%= link_to 'New', new_ticket_path() %></p>
